<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Utah Home Ready Check</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .admin-nav {
            background: var(--dark);
            padding: 15px 0;
        }
        .admin-nav .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .admin-nav a { color: white; text-decoration: none; margin-right: 20px; }
        .admin-nav a:hover { text-decoration: underline; }
        .agents-table {
            width: 100%;
            border-collapse: collapse;
            background: var(--white);
            border-radius: 8px;
            overflow: hidden;
        }
        .agents-table th, .agents-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid var(--border);
        }
        .agents-table th { background: var(--bg); font-weight: 600; }
        .add-agent-form {
            background: var(--white);
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }
        .form-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
        }
    </style>
</head>
<body>
    <nav class="admin-nav">
        <div class="container">
            <div>
                <a href="/admin/dashboard"><strong>Admin</strong></a>
                <a href="/admin/leads">Leads</a>
                <a href="/admin/agents">Agents</a>
            </div>
            <a href="/admin/logout">Logout</a>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <h1 class="mb-3">Manage Agents</h1>

            <% if (success) { %>
                <div class="alert alert-success"><%= success %></div>
            <% } %>

            <div class="add-agent-form">
                <h3 class="mb-2">Add New Agent</h3>
                <form action="/admin/agents" method="POST">
                    <div class="form-row mb-2">
                        <div class="form-group mb-0">
                            <input type="text" name="first_name" class="form-input" placeholder="First Name" required>
                        </div>
                        <div class="form-group mb-0">
                            <input type="text" name="last_name" class="form-input" placeholder="Last Name" required>
                        </div>
                        <div class="form-group mb-0">
                            <input type="email" name="email" class="form-input" placeholder="Email" required>
                        </div>
                        <div class="form-group mb-0">
                            <input type="tel" name="phone" class="form-input" placeholder="Phone">
                        </div>
                        <div class="form-group mb-0">
                            <input type="text" name="brokerage" class="form-input" placeholder="Brokerage">
                        </div>
                        <div class="form-group mb-0">
                            <input type="password" name="password" class="form-input" placeholder="Password" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Agent</button>
                </form>
            </div>

            <table class="agents-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Brokerage</th>
                        <th>Leads</th>
                        <th>Link</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (agents && agents.length > 0) { %>
                        <% agents.forEach(agent => { %>
                            <tr>
                                <td><%= agent.first_name %> <%= agent.last_name %></td>
                                <td><%= agent.email %></td>
                                <td><%= agent.brokerage || '-' %></td>
                                <td><%= agent.lead_count || 0 %></td>
                                <td><a href="/agent/<%= agent.slug %>" target="_blank">/agent/<%= agent.slug %></a></td>
                                <td>
                                    <a href="/admin/agents/<%= agent.id %>">Edit</a>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" style="text-align: center; color: var(--gray);">No agents yet</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>
