<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Utah Home Ready Check</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .admin-nav {
            background: var(--dark);
            padding: 15px 0;
        }
        .admin-nav .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .admin-nav a { color: white; text-decoration: none; margin-right: 20px; }
        .admin-nav a:hover { text-decoration: underline; }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .stat-card {
            background: var(--white);
            padding: 20px;
            border-radius: 8px;
            text-align: center;
        }
        .stat-card .number {
            font-size: 2.5rem;
            font-weight: 700;
        }
        .stat-card .label {
            color: var(--gray);
            font-size: 0.875rem;
        }
        .stat-card.green .number { color: var(--green); }
        .stat-card.yellow .number { color: var(--yellow); }
        .stat-card.red .number { color: var(--red); }
        .leads-table {
            width: 100%;
            border-collapse: collapse;
            background: var(--white);
            border-radius: 8px;
            overflow: hidden;
        }
        .leads-table th, .leads-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid var(--border);
        }
        .leads-table th {
            background: var(--bg);
            font-weight: 600;
        }
        .status-badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            color: white;
        }
        .status-badge.green { background: var(--green); }
        .status-badge.yellow { background: var(--yellow); }
        .status-badge.red { background: var(--red); }
    </style>
</head>
<body>
    <nav class="admin-nav">
        <div class="container">
            <div>
                <a href="/admin/dashboard"><strong>Admin</strong></a>
                <a href="/admin/leads">Leads</a>
                <a href="/admin/agents">Agents</a>
            </div>
            <a href="/admin/logout">Logout</a>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <h1 class="mb-3">Dashboard</h1>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="number"><%= leadStats.total || 0 %></div>
                    <div class="label">Total Leads</div>
                </div>
                <div class="stat-card">
                    <div class="number"><%= leadStats.today || 0 %></div>
                    <div class="label">Today</div>
                </div>
                <div class="stat-card green">
                    <div class="number"><%= leadStats.green || 0 %></div>
                    <div class="label">Green Light</div>
                </div>
                <div class="stat-card yellow">
                    <div class="number"><%= leadStats.yellow || 0 %></div>
                    <div class="label">Yellow Light</div>
                </div>
                <div class="stat-card red">
                    <div class="number"><%= leadStats.red || 0 %></div>
                    <div class="label">Red Light</div>
                </div>
                <div class="stat-card">
                    <div class="number"><%= agentCount || 0 %></div>
                    <div class="label">Agents</div>
                </div>
            </div>

            <h2 class="mb-2">Recent Leads</h2>
            <table class="leads-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Agent</th>
                        <th>Status</th>
                        <th>Score</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (recentLeads && recentLeads.length > 0) { %>
                        <% recentLeads.forEach(lead => { %>
                            <tr>
                                <td><%= lead.first_name %> <%= lead.last_name %></td>
                                <td><%= lead.agent_first_name ? `${lead.agent_first_name} ${lead.agent_last_name}` : '-' %></td>
                                <td>
                                    <% if (lead.readiness_level) { %>
                                        <span class="status-badge <%= lead.readiness_level %>"><%= lead.readiness_level %></span>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td><%= lead.readiness_score || '-' %></td>
                                <td><%= new Date(lead.created_at).toLocaleDateString() %></td>
                                <td>
                                    <a href="/admin/leads/<%= lead.id %>">View</a>
                                    <% if (lead.readiness_level) { %>
                                        | <a href="/admin/leads/<%= lead.id %>/mismo">MISMO</a>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" style="text-align: center; color: var(--gray);">No leads yet</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>
